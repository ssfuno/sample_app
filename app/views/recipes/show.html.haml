.recipe-detail-container
  .upper-container
    .title
      = @recipe.title
    .cooking-time
      = "料理時間　#{@recipe.cooking_minute}分"
  .username
    = "作成者：#{@recipe.user.name}"
  .photo
    = image_tag @recipe.photo.url, size: '600x400'
  .itemname
    必要な具材
  .item
    = simple_format(@recipe.material)
  .itemname
    料理手順
  .item
    = simple_format(@recipe.process)
  - if user_signed_in?
    .favorite
      お気に入り
      - if @recipe.favorited_by?(current_user)
        .ellipse-delete
          = link_to '削除する', recipe_favorites_path(@recipe.id), data: { turbo_method: :delete }
      - else
        .ellipse-post
          = link_to '登録する', recipe_favorites_path(@recipe.id), data: { turbo_method: :post }
    - if @recipe.user.id == current_user.id
      .delete
        = link_to 'レシピを削除する', recipe_path(@recipe.id), data: { turbo_method: :delete }
= link_to 'レシピ追加', new_recipe_path